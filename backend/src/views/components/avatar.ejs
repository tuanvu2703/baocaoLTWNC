<% if (user && user.avatar) { %>
    <!-- Nếu đã đăng nhập và có avatar -->
    <a href="/user/profile" class="w-full py-4 flex justify-center items-center">
        <img src="<%= user.avatar %>" alt="Avatar" class="w-16 h-16 rounded-full object-cover">
    </a>
    <% } else { %>
        <!-- Nếu chưa đăng nhập hoặc không có avatar -->
        <a href="/user/loginpage" class="w-full py-4 flex justify-center items-center">
            <button class="w-16 h-16 rounded-full bg-slate-500">
                avatar
            </button>
        </a>
        <% } %>