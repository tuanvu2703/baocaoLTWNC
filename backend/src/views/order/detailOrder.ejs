<div class="container mx-auto p-5">
    <h1 class="text-4xl font-bold mb-4 w-full text-center mt-2">Order Details - <%= order.id %>
    </h1>
    <div class="flex  justify-start absolute">
        <a href="/order">
            <button
                class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                Back to Orders
            </button>
        </a>
    </div>
    <div class="w-full flex  justify-end">
        <a href="/order/editOrder/<%= order.id %>" class="">
            <button
                class="bg-transparent hover:bg-gray-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-500 hover:border-transparent rounded ">
                Edit
            </button>
        </a>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md mb-6 mt-2">
        <h2 class="text-2xl font-semibold mb-6">Order Information</h2>
        <div class="mb-4">
            <p class="text-lg"><strong>Status:</strong>
                <%= order.status %>
            </p>
        </div>
        
        <div class="mb-4">
            <p class="text-lg"><strong>Description:</strong>
                <%= order.description %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-lg"><strong>Payment Method:</strong>
                <%= order.payment %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-lg"><strong>Address:</strong>
                <%= order.address %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-lg"><strong>Phone:</strong>
                <%= order.phone %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-lg"><strong>Email:</strong>
                <%= order.email %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-lg"><strong>Date Created:</strong>
                <%= order.dateTimeCreate %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-lg"><strong>Last Updated:</strong>
                <%= order.dateTimeUpdate %>
            </p>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Product Details</h2>
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
            <thead>
                <tr class="bg-gray-100">
                    <th class="py-3 px-4 text-left">Id</th>
                    <th class="py-3 px-4 text-left">Product</th>
                    <th class="py-3 px-4 text-left">Category</th>
                    <th class="py-3 px-4 text-left">Price</th>
                    <th class="py-3 px-4 text-left">Quantity</th>
                    <th class="py-3 px-4 text-left">Status</th>
                    <th class="py-3 px-4 text-left">Image</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product=> { %>
                    <tr>
                        <td class="py-3 px-4 border-b">
                            <%= product.id %>
                        </td>
                        <td class="py-3 px-4 border-b">
                            <%= product.product_name %>
                        </td>
                        <td class="py-3 px-4 border-b">
                            <%= product.category_name %>
                        </td>
                        <td class="py-3 px-4 border-b">$<%= product.price %>
                        </td>
                        <td class="py-3 px-4 border-b">
                            <%= product.quantity %>
                        </td>
                        <td class="py-3 px-4 border-b">
                            <%= product.status %>
                        </td>
                        <td class="py-3 px-4 border-b">
                            <img src="<%='http://localhost:3001/'+ product.img %>" alt="<%= product.name %>"
                                class="w-16 h-16 object-cover rounded-md">
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</div>