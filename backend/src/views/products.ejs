<header class="bg-primary py-4 px-6 flex items-center justify-between">
    <h1 class="text-2xl font-bold">Product Management</h1>
    <button id="addCategoryBtn"
        class="bg-secondary text-secondary-foreground hover:bg-secondary/80 px-4 py-2 rounded-md">Add Product
    </button>
</header>
<div class="bg-background text-primary-foreground flex flex-col border-2 mx-5 rounded-2xl">
    <div class="bg-card w-full md:w-3/4 lg:w-2/3 xl:w-1/2 rounded-lg shadow-lg overflow-hidden">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-primary text-primary-foreground border-b-4 border-sky-800">
                    <th class="py-3 px-4 text-left">ID</th>
                    <th class="py-3 px-4 text-left">Image</th>
                    <th class="py-3 px-4 text-left">Product Name</th>
                    <th class="py-3 px-4 text-left">Category Name</th>
                    <th class="py-3 px-4 text-left">Price</th>
                    <th class="py-3 px-4 text-left">Stock</th>
                    <th class="py-3 px-4 text-left">Discount</th>
                    <th class="py-3 px-4 text-left">Status</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < data.length; i++) {%>
                    <tr class="bg-card hover:bg-accent transition duration-300">
                        <td class="py-5 px-4 border-b border-muted">
                            <%= i+1 %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].img_url %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].product_name %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].category_id %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].price %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].stock %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].discount %>
                        </td>
                        <td class="py-5 px-4 border-b border-muted">
                            <%= data[i].status %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>